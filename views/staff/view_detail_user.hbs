<!--Start profile page-->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Hồ sơ của khách hàng</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group mb-3">
                                    <label>Họ và tên</label>
                                    <input type="text" name="us" value="{{data.fullname}}" readonly="true" id="fullname"
                                        class="form-control" />
                                </div>
                            </div>
                             <div class="col-xl-6 col-md-6">
                                <div class="mb-3">
                                    <label for="example-date-input" class="form-label">Ngày sinh</label>
                                    <input class="form-control" value="{{formatDateOfBirth data.date_of_birth}}" readonly="true" id="date" type="date"
                                        id="example-date-input">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-6 col-md-6">
                                <div class="form-group mb-3">
                                    <label>Số điện thoại</label>
                                    <input class="form-control" value="{{data.phone}}" readonly="true" type="tel" value="" id="phone">
                                </div>
                            </div>
                            <div class="col-xl-6 col-md-6">
                                <div class="form-group mb-3">
                                    <label>Email</label>
                                    <input type="email" value="{{data.email}}"
                                        data-pristine--message="Vui lòng nhập email" readonly="true" disabled="true"
                                        class="form-control" />
                                </div>
                            </div>
                        </div>
                       <div class="row">

                            <div class="col-md-2">
                                <label>Giới tính: </label>
                            </div>

                            <div class="col-md-10">

                                <p style="display: none;" id="gend">{{data.gender}}</p>
                                <div class="d-flex">
                                    <div class="form-check mb-3" style="margin-right: 5px;">
                                        <input class="form-check-input" type="radio" value="male" name="gender"
                                            id="male">
                                        <label class="form-check-label" for="male">
                                            Nam
                                        </label>
                                    </div>
                                    <div class="form-check mb-3" style="margin-right: 5px;">
                                        <input class="form-check-input" type="radio" value="female" name="gender"
                                            id="female">
                                        <label class="form-check-label" for="female">
                                            Nữ
                                        </label>
                                    </div>
                                    <div class="form-check mb-3" style="margin-right: 5px;">
                                        <input class="form-check-input" type="radio" value="other" name="gender"
                                            id="other">
                                        <label class="form-check-label" for="other">
                                            Khác
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <p style="text-align:center;" class="form-check-label">Ảnh đại diện</p>
                        <br>
                        <div class="flex-shrink-0">
                            <div class="avatar center">
                                <img src="/assets/images/users/avatar-3.jpg" alt=""
                                    class="img-fluid rounded-circle d-block img-thumbnail  ">

                            </div>

                        </div>

                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end col -->
        </div>
    </div>
</div>

<!-- end profile page -->
<script src="/assets/libs/jquery/jquery.min.js"></script>
<script src="/js/axios.min.js"></script>
<script src="/js/profile_s.js"></script>