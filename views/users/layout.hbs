<body data-layout="horizontal" data-topbar="dark">
    <a href=""></a>
    <!-- Begin page -->
    <div id="layout-wrapper">
        <header id="page-topbar">
            <div class="navbar-header">
                <div class="d-flex">
                    <!-- LOGO -->
                    <div class="navbar-brand-box">
                        <a class="logo logo-dark">
                            <span class="logo-sm">
                                <img src="/img/bg/order_light.png" alt="" height="24">
                            </span>
                            <span class="logo-lg">
                                <img src="/img/bg/order_light.png" alt="" height="24"> <span class="logo-txt"></span>
                            </span>
                        </a>
                        <a class="logo logo-light">
                            <span class="logo-sm">
                                <img src="/img/bg/mubaha-order-free.png" alt="" height="24">
                            </span>
                            <span class="logo-lg">
                                <a href="/">
                                <img src="/img/bg/mubaha-order-free.png" alt="" height="40"> <span class="logo-txt"></span>
                                </a>
                            </span>
                        </a>
                    </div>

                    <button type="button"
                        class="btn btn-sm px-3 font-size-16 d-lg-none header-item waves-effect waves-light"
                        data-bs-toggle="collapse" data-bs-target="#topnav-menu-content">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>

                    <!-- App Search-->

                </div>
                <div class="d-flex">
                    {{!-- Notifications --}}
                    <div class="dropdown d-inline-block">
                        <button type="button" class="btn header-item noti-icon position-relative"
                            id="page-header-notifications-dropdown" data-bs-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            <i data-feather="bell" class="icon-lg"></i>
                            <span class="badge bg-danger rounded-pill">{{count_message}}</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end p-0"
                            aria-labelledby="page-header-notifications-dropdown">
                            <div class="p-3">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h6 class="m-0" style="border-bottom: 1px solid black;"> Thông báo </h6>
                                    </div>

                                </div>
                            </div>
                            <div data-simplebar="" style="max-height: 230px;">
                                {{#if notification_list}}
                                {{#each notification_list}}
                                <a href="./view_detail?id={{this.order_id._id}}" title="{{this._id}}"
                                    class="text-reset notification-item click">
                                    <div class="d-flex notification-{{this.is_read}}"
                                        style="border-bottom: 1px solid #cacfcc;">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">Gửi thông báo về đơn hàng<sapn
                                                    style="color:rgb(168, 54, 54)"> {{this.order_id.nanoId}}</sapn>
                                            </h6>
                                            <div class="font-size-13 text-muted">
                                                <p class="mb-1">{{this.content}}</p>
                                                <p class="mb-0"><i class="mdi mdi-clock-outline"></i>
                                                    <span>{{formatDateNotification this.createdAt}}</span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                                {{/each}}
                                {{else}}
                                <div class="d-flex">
                                    <div class="flex-grow-1">

                                        <h6 class="mb-1">Bạn chưa có thông báo nào nào</h6>

                                    </div>
                                </div>
                                {{/if}}
                            </div>
                            <div class="p-2 border-top d-grid">
                                <a class="btn btn-sm btn-link font-size-14 text-center" href="./notifications">
                                    <i class="mdi mdi-arrow-right-circle me-1"></i> <span>Xem nhiều hơn..</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    {{!-- end Notifications --}}

                    {{!-- layout - mode --}}
                    <div class="dropdown d-none d-sm-inline-block">
                        <button type="button" class="btn header-item" id="mode-setting-btn">
                            <i data-feather="moon" class="icon-lg layout-mode-dark"></i>
                            <i data-feather="sun" class="icon-lg layout-mode-light"></i>
                        </button>
                    </div>
                    {{!--end-layout - mode --}}
                    <div class="dropdown d-inline-block">
                        <button type="button" class="btn header-item bg-soft-light border-start border-end"
                            id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            <i data-feather="user" class="icon-lg"></i>
                            <span class="d-none d-xl-inline-block ms-1 fw-medium">{{data.fullname}}</span>
                            <i class="mdi mdi-chevron-down d-none d-xl-inline-block"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <!-- item-->
                            <a class="dropdown-item" href="./profile"><i
                                    class="mdi mdi-face-profile font-size-16 align-middle me-1"></i>Thông tin tài
                                khoản</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="./address"><i
                                    class="mdi mdi-location-enter font-size-16 align-middle me-1"></i>Thông tin giao
                                hàng</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/auth/logout"><i
                                    class="mdi mdi-logout font-size-16 align-middle me-1"></i> Đăng xuất</a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="topnav">
            <div class="container-fluid">

                <nav class="navbar navbar-light navbar-expand-lg topnav-menu">
                    <div class="collapse navbar-collapse" id="topnav-menu-content">
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <a class="nav-link dropdown-toggle arrow-none" href="./create" id="topnav-dashboard"
                                    role="button">
                                    <i data-feather="plus-circle"></i><span data-key="t-dashboard">Tạo đơn hàng</span>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle arrow-none" href="./list_order" id="drop"
                                    role="button">
                                    <i data-feather="grid"></i><span data-key="t-apps">Các đơn hàng</span>
                                </a>

                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle arrow-none" href="../support" id="topnav-dashboard"
                                    role="button" target="_blank">
                                    <i data-feather="box"></i><span data-key="t-dashboard">Hỗ trợ</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a class="currency" >
                        Tỷ giá quy đổi tiền tệ ngày hôm nay là: 1¥ = {{currency.price}} VNĐ
                    </a>


                </nav>
            </div>


        </div>
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    {{{body}}}
                </div>
            </div>
        </div>
